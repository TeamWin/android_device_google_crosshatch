<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qti.editnumber"
    android:sharedUserId="android.uid.phone">

    <application>
        <activity android:name="com.qti.editnumber.QtiEditNumberDialog"
            android:theme="@android:style/Theme.Dialog"
            android:windowCloseOnTouchOutside="false"
            android:showOnLockScreen="true"
            android:exported="true"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="com.qti.editnumber.INTENT_ACTION_DIALOG_DISMISS" />
                <action android:name="com.qti.editnumber.INTENT_ACTION_LAUNCH_DIALOG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
